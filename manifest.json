{
  "manifest_version": 2,
  "name": "Auto PAC Proxy",
  "version": "2.0.2",
  "description": "Domain-specific URI PAC Script manager. List-and-name based mode or proxy adress based mode.",
  "permissions": [
    "proxy",
    "alarms",
    "storage",
    "menus",
    "*://*/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/icon-48.png"
    },
    "default_title": "Refresh PAC manually"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "48": "icons/icon-48.png"
  },
  "applications": {
    "gecko": {
      "id": "autopac@example.com"
    }
  }
}